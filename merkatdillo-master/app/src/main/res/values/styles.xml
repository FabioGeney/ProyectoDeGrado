<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary2</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark2</item>
        <item name="colorAccent">@color/colorAccent2</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/colorDivider</item>
        <item name="colorControlActivated">@color/colorAccent2</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ToolbarColoredBackArrow" parent="AppTheme">
        <item name="android:textColorSecondary">#4CAF50</item>
    </style>

    <style name="RaisedButton" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">#4CAF50</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="ThemeMainActivity" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#4CAF50</item>
        <item name="colorPrimaryDark">#388E3C</item>
        <item name="colorAccent">#8BC34A</item>
        <item name="android:textColorSecondary">#757575</item>
        <item name="android:textColorPrimary">#212121</item>
        <item name="android:textColor">#FFFFFF</item>

    </style>

    <style name="ThemeChatActivity" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#4CAF50</item>
        <item name="colorPrimaryDark">#388E3C</item>
        <item name="colorAccent">#8BC34A</item>
        <item name="android:textColorSecondary">#757575</item>
        <item name="android:textColorPrimary">#212121</item>

    </style>

    <style name="ThemeMainActivityH" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#4CAF50</item>
        <item name="colorPrimaryDark">#388E3C</item>
        <item name="colorAccent">#8BC34A</item>
        <item name="android:textColorSecondary">#757575</item>
        <item name="android:textColorPrimary">#212121</item>
        <item name="android:textColor">#212121</item>


    </style>

    <style name="Color" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#4CAF50</item>
        <item name="colorPrimaryDark">#388E3C</item>
        <item name="colorAccent">#8BC34A</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="bordeText">
        <item name="android:paddingLeft">10px</item>
        <item name="android:paddingBottom">10px</item>
        <item name="android:textColor">#8BC34A</item>
        <item name="android:textSize">15sp</item>
        <item name="android:shadowColor">#0E0E0E</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">3</item>
    </style>


</resources>
